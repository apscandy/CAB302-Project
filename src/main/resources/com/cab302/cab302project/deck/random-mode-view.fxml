<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="360.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cab302.cab302project.controller.deck.RandomModeController">
    <children>
        <fx:include source="../base-view.fxml" />

        <!-- Label for displaying the question -->
        <TextArea fx:id="questionTextArea" layoutX="50.0" layoutY="80.0" prefWidth="540.0" prefHeight="80.0"
                  wrapText="true" editable="false" />
        <!-- Label for displaying the answer -->
        <TextArea fx:id="answerTextArea" layoutX="50.0" layoutY="180.0" prefWidth="540.0" prefHeight="80.0"
                  wrapText="true" editable="false" />

        <!-- Navigation Buttons -->
        <Button fx:id="backButton" layoutX="150.0" layoutY="280.0" mnemonicParsing="false" text="Back"
                onAction="#handleBackButton"/>
        <Button fx:id="nextButton" layoutX="440.0" layoutY="280.0" mnemonicParsing="false" text="Next"
                onAction="#handleNextButton"/>
    </children>
</AnchorPane>
